{{#iscourseviewpage}}
<i class="icon fa qicon-icon-back arrow-left previousnav cvormv" id="cvbkbtn" data-cid="{{courseid}}" role="button"></i>
{{/iscourseviewpage}}
{{#ismodulepage}}
<i class="icon qicon-icon-back fa arrow-left previousnav cvormv" id="mvbkbtn" data-cid="{{courseid}}" role="button"></i>
{{/ismodulepage}}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-none">
        {{#ismycoursepage}}
            <li class="breadcrumb-item active" aria-current="page">{{#str}} mycourses, theme_qubitsbasic {{/str}}</li>
        {{/ismycoursepage}}
        {{#iscourseviewpage}}
            <li class="breadcrumb-item"><a href="{{globals.config.wwwroot}}/my/courses.php" class="bc-items">{{#str}} mycourses, theme_qubitsbasic {{/str}}</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{heading}} ( {{ categoryname }} - {{ level }} )</li>
        {{/iscourseviewpage}}
        {{#ismodulepage}}
            <li class="breadcrumb-item"><a href="{{globals.config.wwwroot}}/my/courses.php" class="bc-items">{{#str}} mycourses, theme_qubitsbasic {{/str}}</a></li>
            <li class="breadcrumb-item bc-items" aria-current="page">
            <a href="{{globals.config.wwwroot}}/course/view.php?id={{courseid}}" class="bc-items">
            {{coursefullname}} ( {{ categoryname }} - {{ level }} )
            </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">{{heading}}</li>
        {{/ismodulepage}}
        {{#otherpage}}
            <li class="breadcrumb-item active" aria-current="page">{{heading}}</li>
        {{/otherpage}}
    </ol>
</nav>

{{#js}}
require(['theme_qubitsbasic/qubitsmain'], (QubitsMain) => {
 let qubitsMain = QubitsMain.init();
 qubitsMain.breadcrumbBackBtn();
 qubitsMain.courseViewAndDetail();
});
{{/js}}