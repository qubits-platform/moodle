const pSBC=(p,c0,c1,l)=>{
	let r,g,b,P,f,t,h,m=Math.round,a=typeof(c1)=="string";
	if(typeof(p)!="number"||p<-1||p>1||typeof(c0)!="string"||(c0[0]!='r'&&c0[0]!='#')||(c1&&!a))return null;
	h=c0.length>9,h=a?c1.length>9?true:c1=="c"?!h:false:h,f=pSBC.pSBCr(c0),P=p<0,t=c1&&c1!="c"?pSBC.pSBCr(c1):P?{r:0,g:0,b:0,a:-1}:{r:255,g:255,b:255,a:-1},p=P?p*-1:p,P=1-p;
	if(!f||!t)return null;
	if(l)r=m(P*f.r+p*t.r),g=m(P*f.g+p*t.g),b=m(P*f.b+p*t.b);
	else r=m((P*f.r**2+p*t.r**2)**0.5),g=m((P*f.g**2+p*t.g**2)**0.5),b=m((P*f.b**2+p*t.b**2)**0.5);
	a=f.a,t=t.a,f=a>=0||t>=0,a=f?a<0?t:t<0?a:a*P+t*p:0;
	if(h)return"rgb"+(f?"a(":"(")+r+","+g+","+b+(f?","+m(a*1000)/1000:"")+")";
	else return"#"+(4294967296+r*16777216+g*65536+b*256+(f?m(a*255):0)).toString(16).slice(1,f?undefined:-2)
}

pSBC.pSBCr=(d)=>{
	const i=parseInt;
	let n=d.length,x={};
	if(n>9){
		const [r, g, b, a] = (d = d.split(','));
	        n = d.length;
		if(n<3||n>4)return null;
		x.r=i(r[3]=="a"?r.slice(5):r.slice(4)),x.g=i(g),x.b=i(b),x.a=a?parseFloat(a):-1
	}else{
		if(n==8||n==6||n<4)return null;
		if(n<6)d="#"+d[1]+d[1]+d[2]+d[2]+d[3]+d[3]+(n>4?d[4]+d[4]:"");
		d=i(d.slice(1),16);
		if(n==9||n==5)x.r=d>>24&255,x.g=d>>16&255,x.b=d>>8&255,x.a=Math.round((d&255)/0.255)/1000;
		else x.r=d>>16,x.g=d>>8&255,x.b=d&255,x.a=-1
	}return x
};


require(['jquery', 'core/config', 'core/templates'], function($, Config, Templates){
    function hexToRgb(hex) {
       var result = /^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i.exec(hex);
        return result ? {
            r: parseInt(result[1], 16),
            g: parseInt(result[2], 16),
            b: parseInt(result[3], 16)
        } : null;
    }

   let scrolllock = false
   function qubits_load_mycourses(){
        let mycourseurl = `${Config.wwwroot}/lib/ajax/service.php?sesskey=${Config.sesskey}&info=theme_qubitsbasic_get_enrolled_courses_by_timeline_classification`;
        let offset = $("#mycrsecard").data("offset")
        let limit = $("#mycrsecard").data("limit")
        let complete = $("#mycrsecard").data("complete")
        if(complete == "yes"){
            return null;
        }
        let payload = [
                {
                    "index": 0,
                    "methodname": "theme_qubitsbasic_get_enrolled_courses_by_timeline_classification",
                    "args": {
                        "offset": offset,
                        "limit": limit,
                        "classification": "all",
                        "sort": "fullname",
                        "customfieldname": "level",
                        "customfieldvalue": ""
                    }
                }
            ];
        $.ajax({
            url : mycourseurl,
            type : "POST",
            data : JSON.stringify(payload),
            contentType : "application/json"
        }).done(function(resp){
            let curresp = resp[0]
            if(curresp.error){
                console.log("Error Occurred")
            }else{
                let curdata = curresp.data
                let curcourses = curdata?.courses
                let nextoffset = curdata?.nextoffset
                let curoffset = $("#mycrsecard").data("offset")
                if(nextoffset==curoffset){
                    $("#mycrsecard").data("complete", "yes")
                    scrolllock = true
                }else{
                    $("#mycrsecard").data("offset", nextoffset)
                    //console.log("Courses >>>> ")
                    //console.log(JSON.stringify(curcourses, null, 4))
                    //console.log("****")
                    curcourses.forEach((course) => {
					    course.level = (course.level) ? course.level : "1"
						course.cardcolour = (course.cardcolour) ? course.cardcolour : "#FFB900"
                        course.cardcolour = (course.progress == 100) ? "#3e3e3e" : course.cardcolour;
                        objCoursergb = hexToRgb(course.cardcolour)
                        course.cardcolourR = objCoursergb.r
                        course.cardcolourG = objCoursergb.g
                        course.cardcolourB = objCoursergb.b
                        course.cardcolourA = (course.progress == 100) ? 0.2 : 0.5;
                        course.iscomplete = (course.progress == 100) ? true : false;
                        let colorcode = course.cardcolour + "80"
                        course.colorbgcard = pSBC(0, colorcode, "c")
                        course.covlybglighten = pSBC ( 0.15, course.colorbgcard )
                        course.covlybgdarken = pSBC ( -0.10, course.colorbgcard )
                        course.covlycolordarken = pSBC ( -0.45, course.colorbgcard )
                        course.covlybghlighten = pSBC ( 0.15, course.colorbgcard )
                        course.covlybghdarken = pSBC ( -0.10, course.colorbgcard )
                        
                        Templates.render('theme_qubitsbasic/course/coursecard', course).then((coursecardhtml) => {
                            $("#mycrsecard").append(coursecardhtml)
                        });
                    });
                    setTimeout(() => {
                        scrolllock = false
                    }, 1000);
                }
            }  
        });
   }
   scrolllock = true
   qubits_load_mycourses()

   $( window ).on( "scroll", function() {
        if(scrolllock===false){
            scrolllock = true
            qubits_load_mycourses()
        }
  });

});
